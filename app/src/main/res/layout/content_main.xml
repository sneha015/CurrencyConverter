<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="converter.currency.com.currencyconverter.MainActivity"
    android:background="#b3b3ff"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#b3b3ff"
        android:weightSum="100"
        android:paddingTop="20dp">
        <TextView
            android:text="Amount: "
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="50"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/currency_text"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="30dp"
            android:layout_weight="20"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_below="@id/layout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:background="#b3b3ff"
        android:layout_centerVertical="true"
        android:paddingTop="25dp">
        <TextView
            android:text="Currency: "
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="15.66"
            android:textSize="25sp"/>


        <TextView
            android:id="@+id/from_locale"
            android:text=""
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:layout_weight="15.66"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_below="@id/layout2"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:background="#b3b3ff"
        android:paddingTop="50dp">
        <Button
            android:text="Apply"
            android:id="@+id/apply_button"
            android:textColor="@android:color/black"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#2dc560"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/dont_button"
            android:text="Do Not"
            android:textColor="@android:color/black"
            android:layout_weight="50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#f12e52"
            android:textSize="20sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_below="@id/layout3"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:background="#b3b3ff"
        android:weightSum="100">

        <TextView
            android:id="@+id/converted_text"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="30dp"
            android:layout_weight="90.77"
            android:singleLine="true"
            android:textSize="25sp"/>
    </LinearLayout>

</RelativeLayout>
